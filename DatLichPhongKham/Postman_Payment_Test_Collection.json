{
	"info": {
		"_postman_id": "payment-test-collection",
		"name": "Payment API - Test Constraints",
		"description": "Test collection cho Payment API - Kiểm tra validation và constraints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
